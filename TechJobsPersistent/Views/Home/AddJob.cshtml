@model TechJobsPersistent.ViewModels.AddJobViewModel

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">

    <div class="form-group">
        <label>Name</label><br>
        <input class="form-control" asp-for="Name" asp-validation-for="Name" />
    </div>

    <div class="form-group">
        <label>Employers</label><br>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
    </div>

    <div class="form-group">
        <label>Skills</label><br>
        @foreach (Skill skill in Model.Skills)
        {
            <br><input type="checkbox" name="selectedSkills" value="skills.Id">
            <label>skill.Name</label>
            <p><a asp-controller="Skill" asp-action="Add">Add Skills</a></p>
        }
    </div>

    <input type="submit" value="Add Job" />

</form>

